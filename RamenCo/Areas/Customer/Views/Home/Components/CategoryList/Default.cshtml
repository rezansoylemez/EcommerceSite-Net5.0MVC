@model IEnumerable<RamenCo.Models.Category>


<div class="col-md-3">
    <div class="card">
        <div class="list-group">
            <a asp-action="Index" asp-controller="Home" class="list-group-item list-group-item-action @(ViewBag.KategoriId==null?"active":"")" aria-current="true">
                TÜM ÜRÜNLER
            </a>

            @foreach (var item in Model)
            {
                <a asp-action="CategoryDetails" class="list-group-item list-group-item-action  @(ViewBag.KategoriId?.ToString()==item.ID.ToString()?"active":"")" asp-route-id="@item.ID">@item.Name 
            
            </a>

                
            }
        </div>
    </div>
</div>