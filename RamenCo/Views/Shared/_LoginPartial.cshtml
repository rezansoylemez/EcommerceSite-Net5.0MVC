@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Merhaba @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="btn btn-outline-dark">
            <i class="bi bi-box-arrow-left"></i>
            Çıkış</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="btn btn-outline-dark" asp-area="Identity" asp-page="/Account/Register" style="margin-right:3px">  
        <i class="bi bi-person-circle"></i> Üye Ol</a>
    </li>
    <li class="nav-item">
        <a class="btn btn-outline-dark" asp-area="Identity" asp-page="/Account/Login">
        <i class="bi bi-box-arrow-in-right"></i> Giriş</a>
    </li>
}
</ul>
